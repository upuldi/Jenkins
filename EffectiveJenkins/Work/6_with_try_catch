node {
   
   echo 'Simple Pipeline....'
   
   stage ('Using try catch') {
       
       try {
           
           def obj = null
           sh "${obj.class}"
           
       } catch(NullPointerException e) {
         //  error 'broken pipeline'
           //currentBuild.result = 'Faillure'
           currentBuild.result = 'UNSTABLE'
           //currentBuild.result = 'SUCCESS'
           
       } finally {
           
           sh 'echo executing the finally block'
           stage('post build') {
               sh 'echo post build'
           }
       }
   }
}
