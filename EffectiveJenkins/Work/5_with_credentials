node {
   
   echo 'Simple Pipeline....'
   
   stage ('Using credentials') {
       
       sh 'echo credentials are refered with ids'
       
       withCredentials([usernameColonPassword(credentialsId: 'test_credential_id', variable: 'testVariableToHoldCredential')]){
           echo "my password is  '${testVariableToHoldCredential}'"
       }
   }
}
