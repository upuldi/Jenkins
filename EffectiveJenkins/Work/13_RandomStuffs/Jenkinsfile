 
pipeline {

	agent any

    environment {
        varibleDefinition = "foo"
    }
   
	tools {
		maven 'M3'
	}

	stages {
	
        stage('Varible from environment') {
			steps {
				sh 'echo ${varibleDefinition}'
			}
		}

        
        stage('Varible from definition') {
            steps {
                script {
                    def commit = sh (returnStdout: true, script: '''echo hi ''').split()
                    echo "${commit[-1]} "            
                }
            }
        }
        
        
    
    }
    
    post { 
            always { 
                echo 'Finishing .....'
            }
        }    
    
}
